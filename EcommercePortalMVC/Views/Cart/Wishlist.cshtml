@model IEnumerable<EcommercePortalMVC.Models.Wishlist>
@{

}
    <div class="row">

        <!--Grid column-->
        <div class="col-lg-8">

            <!-- Card -->
            <div class="mb-3">
                <div class="pt-4 wish-list">
                    <h5 class="mb-4">Wishlist (<span>@Model.Count()</span> items)</h5>
                    @foreach (var item in Model)
                    {
                        <div class="row mb-4">
                            <div class="col-md-5 col-lg-3 col-xl-3">
                                <div class="view zoom overlay z-depth-1 rounded mb-3 mb-md-0">
                                    <img class="img-fluid w-100"
                                         src="@item.Product.Image_Name" alt="Sample">
                                </div>
                            </div>
                            <div class="col-md-7 col-lg-9 col-xl-9">
                                <div>
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h5>@item.Product.Name</h5>
                                            <p class="mb-3 text-muted text-uppercase small">@item.Product.Description</p>
                                            <p class="mb-3 text-warning">@item.DateAddedToWishList</p>
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <a asp-action="RemoveWishlistItem" asp-controller="Cart" asp-route-productId="@item.ProductId" type="button" class="card-link-secondary small text-uppercase mr-3" style="text-decoration: none;color:red;">
                                                <i class="material-icons md-18" style="vertical-align: middle;color:red;">delete</i>Remove item
                                            </a>
                                        </div>
                                        <p class="mb-0 mr-4"><span><strong id="summary">&#8377; @item.Product.Price</strong></span></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr class="mb-4">
                    }
                </div>
            </div>
        </div>
    </div>
